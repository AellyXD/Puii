FROM aellyxd/puii:main

RUN git clone -b Puii https://github.com/AellyXD/Puii /home/theultroid/ \
    && chmod 777 /home/theultroid \
    && mkdir /home/ultroid/bin/

COPY ./sample_config.env ./config.env* /home/theultroid/

WORKDIR /home/theultroid/

RUN pip install -r requirements.txt

CMD ["bash","start"]
